@model IEnumerable<OrganizeFundamental.Models.UtahEmployee.EmployeePayPeriod>

@{
	ViewData["Title"] = "Pay Periods";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
	<div class="panel-heading">
		<a asp-action="Create" class="btn btn-default" title="Add"><span class="glyphicon glyphicon-plus"></span></a>
	</div>
	<table class="table table-condensed table-hover table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.YearRank)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StartDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.EndDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CheckDate)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var year in Model.GroupBy(pp => pp.ID / 100))
			{
				<tr>
					<th class="text-center" colspan="5">
						@year.Key
					</th>
				</tr>
				@foreach (var item in year)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.YearRank)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.StartDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.EndDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CheckDate)
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
							<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>
