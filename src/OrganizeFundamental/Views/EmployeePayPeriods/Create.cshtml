@model OrganizeFundamental.Models.UtahEmployee.EmployeePayPeriod

@{
	var isCreating = (bool?)ViewData["IsCreating"] ?? false;
	var title = isCreating ? "Create" : "Edit";
	var suffix = "Pay Period";
	ViewData["Title"] = title + " " + suffix;
}

<h2>
	@title
	<small>@suffix</small>
</h2>

<form asp-action="@title">
	<div class="row">
		<div class="col-lg-8">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="form-horizontal">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						@if (!isCreating)
						{
							<input type="hidden" asp-for="ID" />
						}
						<div class="form-group">
							<label asp-for="YearRank" class="col-md-2 control-label"></label>
							<div class="col-md-10">
								<input asp-for="YearRank" class="form-control" />
								<span asp-validation-for="YearRank" class="text-danger" />
							</div>
						</div>
						<div class="form-group">
							<label asp-for="StartDate" class="col-md-2 control-label"></label>
							<div class="col-md-10">
								<input asp-for="StartDate" class="form-control" />
								<span asp-validation-for="StartDate" class="text-danger" />
							</div>
						</div>
						<div class="form-group">
							<label asp-for="EndDate" class="col-md-2 control-label"></label>
							<div class="col-md-10">
								<input asp-for="EndDate" class="form-control" />
								<span asp-validation-for="EndDate" class="text-danger" />
							</div>
						</div>
						<div class="form-group">
							<label asp-for="CheckDate" class="col-md-2 control-label"></label>
							<div class="col-md-10">
								<input asp-for="CheckDate" class="form-control" />
								<span asp-validation-for="CheckDate" class="text-danger" />
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>
		</div>
	</div>
</form>

<div>
	<a asp-action="Index" title="Back to List" class="btn btn-default"><span class="glyphicon glyphicon-th-list"></span></a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
